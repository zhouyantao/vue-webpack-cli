{
  "compilerOptions": {
    "outDir": "./stage",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
    },
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "target": "es6",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "lib": ["es6", "dom"]
  },
  "include": ["./src/**/*"]
}
